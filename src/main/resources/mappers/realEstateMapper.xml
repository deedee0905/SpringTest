<?xml version="1.0" encoding="UTF-8"?>


<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
  
  <mapper namespace="com.amitaaa.spring.ex.mybatis.dao.RealEstateDAO">
  
  	<select id="selectRealEstate" resultType="com.amitaaa.spring.ex.mybatis.model.RealEstate" 
  	parameterType="int">
  		SELECT
  			`id`
  			, `realtorId`
  			, `address`
  			, `area`
  			, `type`
  			, `price`
  			, `rentPrice`
  			, `createdAt`
  			, `updatedAt`
  		FROM
  			`real_estate`
  		WHERE
  			`id` = #{id}	
  			
  	
  	</select>
  	
  	
  	<select id="selectRentPrice" resultType="com.amitaaa.spring.ex.mybatis.model.RealEstate"
  	parameterType="int">
  	
  	SELECT
  			`id`
  			,`name`
  			,`phoneNumber`
  			,`address`
  			,`businessNumber`
  			,`introduce`
  			,`createdAt`
  			,
  		FROM 
  			`real_estate`
  		WHERE
  			`rentPrice` = #{rentPrice}	
  	
  	</select>
  
  </mapper>
  